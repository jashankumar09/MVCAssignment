@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}



<partial name="_Nodification"/>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col pt-6">
            <h2 class="text-primary">Add Students</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                &nbsp;Add New Student
            </a>

        </div>
    </div>
    <br>
    <br>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
        <th>
            Sid
        </th>
        <th>
            SName
        </th>
        <th>
            Age
        </th>
        <th>
            Gender
        </th>
        <th>
            Email
        </th>
        <th>
            PhoneNo
        </th>
        <th>
            Address
         
        </th>
        <th>
            
         
        </th>
        </tr>
    </thead>

    <tbody>
            @{
                int count = 1;
            }
        @foreach(var obj in Model)
        {
            <tr>
                <td width="12.5%">
                    @count
                </td>
                <td width="12.5%">
                    @obj.Name
                </td>
                <td width="12.5%">
                    @obj.Age
                </td>
                <td width="12.5%">
                    @obj.Gender
                </td>
                <td width="12.5%">
                    @obj.Email
                </td>
                <td width="12.5%">
                    @obj.PhoneNo
                </td>
                <td width="12.5%">
                    @obj.Address
                </td>
                <td>
                    <div class="m-75 btn-group" role="group">
                        <a asp-controller="Student"asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Student"asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>

             
            </tr>

            count++;
        }
    </tbody>
</table>
</div>